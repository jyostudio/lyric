{
  "name": "@jyostudio/lyric",
  "version": "1.0.0",
  "description": "lyric parser and formatter",
  "license": "MIT",
  "author": "nivk",
  "source": "src/lyric.ts",
  "main": "src/lyric.ts",
  "unpkg": "dist/lyric.js",
  "jsdelivr": "dist/lyric.js",
  "type": "module",
  "types": "src/lyric.d.ts",
  "typings": "src/lyric.d.ts",
  "scripts": {
    "publish": "npm publish --access public",
    "build": "webpack --mode=production",
    "dev": "webpack --watch --mode=development",
