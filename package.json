    "@babel/runtime-corejs3": "^7.28.0",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.45.0",
    "ts-loader": "^9.5.2",
    "typescript": "^6.0.0-dev.20250917",
    "webpack": "^5.100.2",
    "webpack-bundle-analyzer": "^4.10.2",
